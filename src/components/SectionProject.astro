---
import GithubIcon from "./icons/GithubIcon.astro";
import LinkIcon from "./icons/LinkIcon.astro";
interface Props {
  title: string;
  img: string;
  imgTitle: string;
  githubUrl: string;
  liveUrl: string;
}

const { title, img, imgTitle, githubUrl, liveUrl } = Astro.props;
---

<section class="flex flex-col sm:flex-row gap-6 w-full h-full p-8">
  <picture class="aspect-[9/16] sm:aspect-square min-w-fit h-56 object-cover">
    <img
      src={img}
      alt={imgTitle}
      class="rounded-lg h-full w-full object-cover"
    />
  </picture>
  <div class="flex flex-col w-full justify-between gap-3">
    <h2 class="green-gradient text-3xl font-bold">{title}</h2>
    <slot name="techs" />
    <slot />
    <div class="flex gap-4 justify-end text-white">
      <a
        class="cursor-pointer rounded-full hover:scale-125 hover:-translate-y-1 transition"
        ><LinkIcon size="h-8 w-8" /></a
      >
      <a
        class="cursor-pointer rounded-full hover:scale-125 hover:-translate-y-1 transition"
        ><GithubIcon size="h-8 w-8" /></a
      >
    </div>
  </div>
</section>
