---
import Card from "./Card.astro";
---

<Card grid="row-span-4 col-span-2 lg:row-span-2 lg:col-span-4">
  <div class="flex flex-col h-full justify-between lg:flex-row w-full p-4">
    <div class="flex flex-col justify-center order-2 lg:order-1 h-full">
      <p class="text-sm text-slate-500">Welcome</p>
      <span class="text-lg md:text-2xl text-white"
        >Hi, I'm <strong class="font-bold green-gradient"
          >Sebastian Contreras</strong
        >, a software developer with strong focus on the user experience,
        animations and micro interactions</span
      >
    </div>
    <img
      class="h-40 w-40 self-center lg:w-auto order-1 lg:order-2"
      src="/public/me.png"
      alt="Me with glasses"
    />
  </div>
</Card>
